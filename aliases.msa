foreach(@key: @item in get_inventory(puuid())) {
  if(!is_null(@item)) {
    if(is_null(@item['meta'])) {
      @item['meta'] = array()
    }
    @item['meta']['model'] = $
    set_inventory_item(puuid(), @key, @item)
  }
}
